<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>Tip Calculator</title>
<style>
  body{font-family:system-ui,Arial;background:#f1f5f9;display:flex;align-items:center;justify-content:center;height:100vh;margin:0}
  .card{background:white;padding:1.2rem;border-radius:10px;box-shadow:0 8px 24px rgba(2,6,23,.06);width:420px}
  label{display:block;margin-top:.5rem}
  input,select{width:100%;padding:.6rem;border-radius:8px;border:1px solid #e6eef8;margin-top:.25rem}
  .row{display:flex;gap:.5rem}
  .result{margin-top:.8rem;font-weight:700}
  button{margin-top:.6rem;padding:.6rem 1rem;border-radius:8px;border:0;background:#06b6d4;color:#042331}
</style>
</head>
<body>
  <div class="card">
    <h2>Tip Calculator</h2>
    <label>Bill Amount
      <input type="number" id="bill" min="0" step="0.01" value="100">
    </label>
    <label>Tip %
      <select id="tip">
        <option value="15">15%</option>
        <option value="18">18%</option>
        <option value="20" selected>20%</option>
        <option value="custom">Custom</option>
      </select>
    </label>
    <input id="customTip" placeholder="Custom tip %" style="display:none;margin-top:.5rem" type="number" min="0" step="0.1">
    <label>Split between
      <input type="number" id="people" min="1" value="1">
    </label>
    <button id="calc">Calculate</button>
    <div class="result" id="result"></div>
  </div>

<script>
  const billEl = document.getElementById('bill');
  const tipEl = document.getElementById('tip');
  const customTipEl = document.getElementById('customTip');
  const peopleEl = document.getElementById('people');
  const calcBtn = document.getElementById('calc');
  const resultEl = document.getElementById('result');

  tipEl.addEventListener('change', ()=>{
    customTipEl.style.display = tipEl.value === 'custom' ? 'block' : 'none';
  });

  calcBtn.addEventListener('click', ()=>{
    const bill = parseFloat(billEl.value) || 0;
    let tipPct = tipEl.value === 'custom' ? (parseFloat(customTipEl.value)||0) : parseFloat(tipEl.value);
    const people = Math.max(1, parseInt(peopleEl.value) || 1);

    const tip = bill * (tipPct / 100);
    const total = bill + tip;
    const perPerson = total / people;
    resultEl.innerHTML = `Tip: ${tip.toFixed(2)}<br>Total: ${total.toFixed(2)}<br>Per person: ${perPerson.toFixed(2)}`;
  });
</script>
</body>
</html>
